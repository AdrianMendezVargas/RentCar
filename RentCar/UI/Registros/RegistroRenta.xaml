<Window x:Class="RentCar.UI.Registros.RegistroRenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentCar.UI.Registros"
        xmlns:validaciones="clr-namespace:RentCar.UI.Validaciones"
        mc:Ignorable="d"
        Title="RegistroVentas" Height="544" Width="554" MinHeight="544" MinWidth="554" WindowStartupLocation="CenterScreen">
    <Grid>

        <GroupBox Header="Cliente Id" Height="51" Margin="23,125,85,0" VerticalAlignment="Top"/>



        <Label Content="Renta Id" HorizontalAlignment="Left" Margin="30,79,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="VentaIdTextBox" TextChanged="VentaIdTextBox_TextChanged" Margin="158,84,169,0" TextWrapping="Wrap" VerticalAlignment="Top">
            <Binding Path="venta.VentaId" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay" NotifyOnSourceUpdated="True" NotifyOnTargetUpdated="True" >
                <Binding.ValidationRules>
                    <ExceptionValidationRule/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>
        <TextBox x:Name="ClienteIdTextBox" TextChanged="ClienteIdTextBox_TextChanged" Margin="227,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="217">
            <Binding Path="venta.ClienteId" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay" NotifyOnSourceUpdated="True" NotifyOnTargetUpdated="True">
                <Binding.ValidationRules>
                    <validaciones:CamposOblicatoriosRule/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>


        <Button  x:Name="BuscarButton" Click="BuscarButton_Click" Height="30" HorizontalAlignment="Right" Margin="0,75,50,0" VerticalAlignment="Top">
            <DockPanel>
                <Image Source="/Resources/buscar.png"/>
                <TextBlock VerticalAlignment="Center" Text="Buscar"/>
            </DockPanel>

        </Button>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="248" Margin="0,0,0,23" Height="30">


            <Button  x:Name="NuevoButton" Click="NuevoButton_Click" HorizontalAlignment="Left">
                <DockPanel>
                    <Image Source="/Resources/nuevo.png"/>
                    <TextBlock VerticalAlignment="Center" Text="Nuevo"/>
                </DockPanel>

            </Button>

            <Button  x:Name="GuardarButton" Click="GuardarButton_Click" HorizontalAlignment="Center">
                <DockPanel>
                    <Image Source="/Resources/guardar.png"/>
                    <TextBlock VerticalAlignment="Center" Text="Guardar"/>
                </DockPanel>

            </Button>


            <Button  x:Name="EliminarButton" Click="EliminarButton_Click" HorizontalAlignment="Right">
                <DockPanel>
                    <Image Source="/Resources/eliminar.png"/>
                    <TextBlock VerticalAlignment="Center" Text="Eliminar"/>
                </DockPanel>

            </Button>

        </Grid>

        <Label Content="Nombre cliente" HorizontalAlignment="Left" Margin="23,145,0,0" VerticalAlignment="Top" Width="167"/>
        <TextBox x:Name="NombreClienteTextBox" IsReadOnly="True" Margin="190,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="254"/>

        <GroupBox Header="Vigencia" Height="67" Margin="23,285,31,0" VerticalAlignment="Top"/>

        <Label Content="Desde" HorizontalAlignment="Left" Margin="35,307,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="CuotasTextBox" HorizontalAlignment="Left" Margin="106,308,0,0" VerticalAlignment="Top" Width="151">
        </DatePicker>

        <Label Content="Hasta" HorizontalAlignment="Right" Margin="0,307,197,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="CuotasTextBox_Copy" HorizontalAlignment="Right" Margin="0,308,44,0" VerticalAlignment="Top" Width="148"/>

        <GroupBox Header="Vehículo Id" Height="85" Margin="24,188,28,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <GroupBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.404"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.215"/>
                </TransformGroup>
            </GroupBox.RenderTransform>
        </GroupBox>

        <TextBox x:Name="VehiculoIdTextBox" TextChanged="VehiculoIdTextBox_TextChanged" HorizontalAlignment="Center" Margin="0,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="139">
            <Binding Path="venta.VehiculoId" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay" NotifyOnSourceUpdated="True" NotifyOnTargetUpdated="True">
                <Binding.ValidationRules>
                    <ExceptionValidationRule/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>

        <Label Content="Marca" HorizontalAlignment="Left" Margin="29,214,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="MarcaTextBox" IsReadOnly="True" HorizontalAlignment="Left" Margin="66,218,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="65"/>


        <Label Content="Modelo" HorizontalAlignment="Center" Margin="0,214,110,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ModeloTextBox" IsReadOnly="True" HorizontalAlignment="Center" Margin="0,218,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="65"/>

        <Label Content="Vin" HorizontalAlignment="Left" Margin="29,240,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="VinTextBox" IsReadOnly="True" HorizontalAlignment="Left" Margin="66,244,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="65"/>

        <Label Content="Km" HorizontalAlignment="Center" Margin="0,240,125,0" VerticalAlignment="Top"/>
        <TextBox x:Name="KilometrajeTextBox" IsReadOnly="True" HorizontalAlignment="Center" Margin="0,244,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="65"/>

        <Label Content="Precio" HorizontalAlignment="Right" Margin="0,214,115,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PrecioTextBox" IsReadOnly="True" HorizontalAlignment="Right" Margin="0,218,45,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="65"/>

        <Label Content="Año" HorizontalAlignment="Right" Margin="0,240,118,0" VerticalAlignment="Top"/>
        <TextBox x:Name="AnoTextBox" IsReadOnly="True" HorizontalAlignment="Right" Margin="0,244,45,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="65"/>

        <Label Content="Monto Total" HorizontalAlignment="Left" Margin="23,0,0,99" VerticalAlignment="Bottom"/>
        <TextBox x:Name="MontoTotalTextBox" IsReadOnly="True" HorizontalAlignment="Left" Margin="106,0,0,103" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="106">
            <Binding Path="venta.MontoTotal" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay" NotifyOnSourceUpdated="True" NotifyOnTargetUpdated="True">
                <Binding.ValidationRules>
                    <ExceptionValidationRule/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>

    </Grid>
</Window>
